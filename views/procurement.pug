doctype html
html
  head
    title Procurement Form - KGL
    link(rel='stylesheet', href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/sales.css')
  body
    // Top Navbar
    nav.navbar.navbar-expand-lg.navbar-dark()
      .container-fluid
        a.navbar-brand(href='/') KGL System
        button.navbar-toggler(type='button', data-bs-toggle='collapse', data-bs-target='#navbarNav')
          span.navbar-toggler-icon
        #navbarNav.collapse.navbar-collapse
          ul.navbar-nav.ms-auto
            //- li.nav-item
            //-   a.nav-link(href='/') Home
            li.nav-item
              a.nav-link(href='/creditSaleList') Credits
            li.nav-item
              a.nav-link(href='/procurementList') Procurement
            li.nav-item
              a.nav-link(href='/sell/saleslist') Sales
            li.nav-item
              a.nav-link(href='/signupList') Users
            li.nav-item
              a.nav-link(href='/index') Logout

    .container-fluid
      .row
        // Sidebar
        .col-md-2.sidebar
          ul.nav.flex-column
            if user
              li.nav-item
                a.nav-link(href=user.role === 'director' ? '/dashboard' : user.role === 'manager' ? '/manager-dashboard' : '/sales-manager-dashboard') Dashboard
            li.nav-item
              a.nav-link(href='/add') Add Credit
            li.nav-item
              a.nav-link(href='/procure') Add Procurement
            li.nav-item
              a.nav-link(href='/sell') Add Sale
            li.nav-item
              a.nav-link(href='/signup') Add User
            //- li.nav-item
            //-   a.nav-link(href='/about') About

        // Main Content
        .col-md-10.main-content
          .container.mt-4
            h2.mb-4 Procurement Entry Form
            form#procurementForm.row.g-3(action='/procure' method='POST')
              .col-md-6
                label.form-label(for='produceName') Produce Name
                input.form-control.form-control-sm(type='text', name='produceName', id='produceName', placeholder='Enter produce name')
              .col-md-6
                label.form-label(for='produceType') Type
                input.form-control.form-control-sm(type='text', name='produceType', id='produceType', placeholder='Type (e.g., Cereal)')
              .col-md-6
                label.form-label(for='date') Date
                input.form-control.form-control-sm(type='date', name='date', id='date')
              .col-md-6
                label.form-label(for='time') Time
                input.form-control.form-control-sm(type='time', name='time', id='time')
              .col-md-6
                label.form-label(for='tonnage') Tonnage (kg)
                input.form-control.form-control-sm(type='number', name='tonnage', id='tonnage', placeholder='Enter tonnage')
              .col-md-6
                label.form-label(for='cost') Cost (UGX)
                input.form-control.form-control-sm(type='number', name='cost', id='cost', placeholder='Enter cost')
              .col-md-6
                label.form-label(for='dealerName') Dealer Name
                input.form-control.form-control-sm(type='text', name='dealerName', id='dealerName', placeholder='Dealer Name')
              .col-md-6
                label.form-label(for='branchName') Branch
                select.form-select.form-select-sm(name='branchName', id='branchName')
                  option(value='') Select Branch
                  option(value='Maganjo') Maganjo
                  option(value='Matugga') Matugga
              .col-md-6
                label.form-label(for='contact') Contact
                input.form-control.form-control-sm(type='text', name='contact', id='contact', placeholder='Contact (e.g., 0701234567)')
              .col-md-6
                label.form-label(for='sellingPrice') Selling Price (UGX)
                input.form-control.form-control-sm(type='number', name='sellingPrice', id='sellingPrice', placeholder='Selling Price (UGX)')
              .col-12.text-center
                button.btn.btn-primary.btn-sm(type='submit') Submit Procurement

    script(src='/js/procurementForm.js')
