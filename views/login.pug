doctype html
html
  head
    meta(charset='UTF-8')
    meta(name='viewport' content='width=device-width, initial-scale=1.0')
    title KGL Login
    link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css' rel='stylesheet')
    link(rel='stylesheet' href='/css/login.css')
  body(style="background-image: url('/img/soya.jpg'); background-size: cover; background-position: center; background-repeat: no-repeat; background-attachment: fixed;")
    .container
      .row.justify-content-center.align-items-center.min-vh-100
        .col-md-8.col-lg-6
          .card.shadow
            .row.g-0
              // Left column: illustration or logo (optional)
              .col-md-5.d-none.d-md-flex.align-items-center.bg-success.bg-gradient.text-white.justify-content-center
                .w-100.text-center
                  img(src='/img/beans.jpg' alt='KGL Logo' style='max-width:80px;')
                  h3.mt-3.mb-0 KGL
                  p.small.mt-2.mb-0 Grocery Platform
              // Right column: login form
              .col-md-7.p-4
                h2.text-center.mb-4 KGL Login
                if error
                  .alert.alert-danger= error
                form#loginForm(action='/login' method='POST')
                  .mb-3
                    label.form-label(for='email') Email
                    input#email.form-control(type='email', name='email', required='')
                  .mb-3
                    label.form-label(for='password') Password
                    input#password.form-control(type='password', name='password', required='')
                  .form-check.mb-3
                    input#rememberMe.form-check-input(type='checkbox')
                    label.form-check-label(for='rememberMe') Remember Me
                  .mb-3.text-end
                    a.text-decoration-none(href='#') Forgot Password?
                  button.btn.btn-success.w-100(type='submit') Login
                  #loginError.text-danger.mt-2
    script(src='/js/loginForm.js')
